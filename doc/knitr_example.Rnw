@njit
def _x_times_cheb(c):
    n = c.shape[0]-1
    d = np.zeros_like(c)
    if n >= 1:
        d[0] = 0.5*c[1]
        if n >= 2:
            d[1] = c[0] + 0.5*c[2]
            for j in range(2, n):
                d[j] = 0.5*(c[j-1] + c[j+1])
        else:
            d[1] = c[0]
        d[n] = 0.5*c[n-1]
    return d

@njit
def perturb_mix(cf, s, t):
    e1 = 0.06*(2.0*s - 1.0)
    e2 = 0.04*(2.0*t - 1.0)
    y   = _x_times_cheb(cf)       # adds odd degrees
    y2  = _x_times_cheb(y)        # richer coupling
    return cf + e1*y + e2*y2

