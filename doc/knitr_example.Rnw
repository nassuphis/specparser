    ax.set_ylabel("Im(z)")
    ax.set_title(title)
    ax.grid(True, linestyle="--", linewidth=0.5, alpha=0.4)

    # save as a square image; avoid tight bbox if you want exact pixels
    fig.savefig(path, dpi=500)
