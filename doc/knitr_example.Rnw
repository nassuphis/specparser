    ymin, ymax = im.min(), im.max()
    cx, cy = (xmin + xmax) / 2.0, (ymin + ymax) / 2.0
    span = max(xmax - xmin, ymax - ymin)
    pad = 0.05 * span
    half = span / 2.0 + pad
    ax.set_xlim(cx - half, cx + half)
    ax.set_ylim(cy - half, cy + half)

    # enforce 1:1 aspect
    ax.set_aspect('equal', adjustable='box')
    try:
